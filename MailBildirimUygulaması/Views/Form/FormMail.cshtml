@model MailBildirimUygulamasi.Models.Formlar
<h1>Form</h1>

<div>
    <form asp-action="FormMail" asp-controller="Form" method="post">
    <hr />
    <dl class="row">
            <input type="hidden" asp-for="FormID" />
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Uygulama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uygulama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Aciklama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Not)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Not)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.YayinTarihi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.YayinTarihi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DegisiklikNumarasi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DegisiklikNumarasi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Yayınlayan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Yayınlayan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KontrolEden)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KontrolEden)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Bolum)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Bolum)
        </dd>
        <div class="form-group row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Onaylayan)
            </dt>
            <div class="col-sm-10">
                <input asp-for="Onaylayan" class="form-control" style="width: 25%;" />
                <span asp-validation-for="Onaylayan" class="text-danger"></span>
            </div>
        <hr />
        <div>
            <h4>Eski ve Yeni Kodlar</h4>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Eski Kod</th>
                        <th>Yeni Kod</th>
                        <th>Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.EskiYeniKodlars != null && Model.EskiYeniKodlars.Any())
                    {
                        foreach (var kod in Model.EskiYeniKodlars)
                        {
                            <tr>
                                <td>@kod.EskiKod</td>
                                <td>@kod.YeniKod</td>
                                <td>@kod.Adet</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center">Bu forma ait kod bilgisi bulunmamaktadır.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </dl>
    <div class="col-sm-2">
        <button type="submit" class="btn btn-primary form-control">Yolla</button>
    </div>
</form>
</div>


